# .npmrc - npm configuration to prevent prompts

# Don't prompt for package updates
update-notifier=false

# Use exact versions (no ^ or ~)
save-exact=true

# Skip optional dependencies that might cause prompts
optional=false

# Disable audit prompts
audit=false

# Disable funding messages
fund=false

# Prefer offline mode when packages are cached
prefer-offline=true

# Set progress to false to reduce output noise
progress=false
